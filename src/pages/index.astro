---
import LayoutLt from "../layouts/Layout_Lt.astro";
import "../styles/style.css";
import Team from "../assets/TeamFromDrone.png";
import "../styles/index.css";
import GIF from "../assets/CarDriving.gif";
import Ansys from "../assets/sponsors/ansys.png";
import EasyComposition from "../assets/sponsors/easy-composites-logo-simple-curves.jpg"
---

<html lang="lt">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="format-detection" content="email=no">
    <title>Perkūnas RT</title>
  </head>
  <body>
    <LayoutLt>
      <img src={Team.src} alt="Komanda" class="TeamImg first" />
      <div class="b-block">
        <div class="container slogan">
          <div class="slogan-text">
            <h1>Ateities Greitis</h1>
            <p class="first-p">
              Projektuojame ne tik automobilį, bet ir kuriame ateities viziją
            </p>
          </div>
          <div class="slogan-image">
            <img src={GIF.src} alt="Važiuojantis automobilis" class="image-y" />
          </div>
        </div>
      </div>
      <div class="b-w"></div>
      <div class="w-block">
        <div class="container sponsors">
          <h1>Mūsų Partneriai</h1>
          <div class="sponsor-row">
            <a href="https://www.ansys.com/" target="_blank"><img src={Ansys.src} alt="Ansys" height="120px" /></a>
            <a href="https://www.easycomposites.co.uk" target="_blank"><img src={EasyComposition.src} alt="Ansys" height="120px" /></a>
          </div>
        </div>
      </div>
    </LayoutLt>
  </body>
</html>
